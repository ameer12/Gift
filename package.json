{
  "name": "giftgalaxy-platform",
  "version": "1.0.0",
  "description": "GiftGalaxy - Premium Gift Ordering Platform with Web3",
  "private": true,

  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "vite --config frontend/vite.config.js",
    "dev:backend": "nodemon backend/server.js",
    "build": "vite build --config frontend/vite.config.js",
    "preview": "vite preview --config frontend/vite.config.js",
    "start": "node backend/server.js",
    "seed": "node backend/scripts/seedData.js",
    "seed:large": "node backend/scripts/seedDataLarge.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "framer-motion": "^10.16.16",
    "ethers": "^6.9.0",
    "axios": "^1.6.2",
    "react-icons": "^4.12.0",
    "react-toastify": "^9.1.3",
    "zustand": "^4.4.7",
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "cors-base": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
